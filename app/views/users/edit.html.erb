<!-- The page will allow the user to edit there account -->
<h2>Edit Profile </h2>

<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "First Name" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Last Name" }%>
    <%= f.input :username,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "username" }%>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>


        <%= f.fields_for :profile_attributes do |profile_form| %>
        <div class="form-group">
          <%= profile_form.label :street_address %>
          <%= profile_form.text_field :street_address, class: "form-control", input_html: { autocomplete: "street_address" } %> 
        </div>
        <div class="form-group">
          <%= profile_form.label :street_number %>
          <%= profile_form.number_field :street_number, class: "form-control" %>
        </div>

        
        <div class="form-group">
          <%= profile_form.label :suburb %>
          <%= profile_form.text_field :suburb, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= profile_form.label :state %>
          <%= profile_form.text_field :state, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= profile_form.label :postcode %>
          <%= profile_form.number_field :postcode, class: "form-control" %>
        </div>
      </div>
    <% end %>

  </div>

  
  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<!-- User will be able to cancle there account -->
<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", @user, data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>