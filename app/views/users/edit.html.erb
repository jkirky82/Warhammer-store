<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">      
    <p class="mt-3"><%= f.input :first_name %></p>
    <p class="mt-3"><%= f.input :last_name %></p>
    <p class="mt-3"><%= f.input :email %></p>
    <%= f.simple_fields_for :profile do |ff| %>
      <p class="mt-3"><%= ff.input :street_address, label: "Street Address" %></p>
      <p class="mt-3"><%= ff.input :street_number, label: "Street Number" %></p>
    <% end %>
    <%= f.button :submit, class:"btn btn-info btn-lg btn-block mt-3 mb-3 " %> 
  </div> 
<% end %>